<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hsr_heroes.gadgeothek">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GadgeothekApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".GadgetListActivity"
            android:label="All Gadgets"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MyReservationsActivity"
            android:label="My Reservations"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MyLoansListActivity"
            android:label="My Gadgets"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>